<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('partials/generic.ejs')%>
        <link rel="stylesheet" href="/css/search.css">
</head>

<body>
    <%- include('partials/topNavBar.ejs')%>


        <% if(Object.keys(founditems).length===0){ %>

            <% const title1="No search results" %>
                <% const title2="maybe try Samsung website..." %>
                    <%- include('partials/alertMessage.ejs', {title1, title2}) %>
                        <% } %>



                            <% if(Object.keys(founditems).length!==0){ %>
                                <div id="main">
                                    <h1 id="title">search results for: <%= q %>
                                    </h1> <br>

                                    <div>
                                        <% for (let category in founditems) { %>
                                            <div id="category-section">

                                                <% if (founditems[category].length> 0) { %>
                                                    <img src="<%= founditems[category][0].categoryBitmap %>" alt=""
                                                        id="category-bitmap">
                                                    <% } %>

                                                        <p id="category-name">
                                                            <%= category %>
                                                        </p>
                                            </div>

                                            <div id="results">
                                                <% founditems[category].forEach(item=> { %>

                                                    <%- include('partials/productCard.ejs', {item}) %>

                                                        <% }); %>
                                            </div>
                                            <% } %>
                                    </div>

                                </div>
                                <% } %>

                                    <%- include('partials/bottomNavBar.ejs')%>
</body>

</html>